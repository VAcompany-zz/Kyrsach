<Application x:Class="Kyrsach.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Kyrsach"
             StartupUri="View\Windows\HomeWindow.xaml">
    <Application.Resources>
        <BitmapImage x:Key="signatureSrc" UriSource="Resurser/1.jpg" />
        <BitmapImage x:Key="FoneImage" UriSource="Resurser/2.jpg" />
        <Style TargetType="Button">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8"  BorderThickness="1" BorderBrush="Black" Background="#F5F5F5">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border> 
                        
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
